<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.disaintworking.konnect.AddPeople"
                android:gravity="center"
    android:background="#FFF">




        <EditText
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextName"
            android:hint="Name"
            android:layout_gravity="top"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="20dp"
            android:background="@drawable/loginedittexttopcurve"
            android:textColor="#ff000000"
            android:textColorHint="#494F4E"
            android:textSize="20sp"
            android:layout_marginTop="30dp"/>




        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextPhone"
            android:inputType="phone"
            android:hint="Phone Number"
            android:layout_below="@+id/editTextName"
            android:padding="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/loginedittextnocurve"
            android:textColor="#ff000000"
            android:textColorHint="#494F4E"
            android:textSize="20sp"
            android:fontFamily="Roboto"
            />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:textAllCaps="false"
            android:id="@+id/uploadImage"
            android:background="@drawable/loginedittextbottomcurve"
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:padding="20dp"
            android:layout_below="@+id/editTextPhone"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:fontFamily="Roboto"
            android:gravity="left" />



    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/uploadImage"
    android:text="Confirm"
    android:id="@+id/addButton"
    android:textSize="20sp"
    android:padding="20dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@drawable/loginbutton"
    android:textColor="#ff000000"
    android:fontFamily="Roboto"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="50dp"

    android:layout_alignRight="@+id/uploadImage"
    android:layout_alignEnd="@+id/uploadImage" />

</RelativeLayout>
